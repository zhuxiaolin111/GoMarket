<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res/com.jarvis.mytaobaotest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Tao_F" >
    <com.My.SlidingMenu
        android:id="@+id/mLeftMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        hyman:leftPadding="150dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <include layout="@layout/left_menu_layout"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#ffffff"
         android:orientation="vertical">
    <include layout="@layout/top_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
               <com.javis.ab.view.AbSlidingPlayView
                android:id="@+id/viewPager_menu"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                 android:background="#00000000" 
                 android:layout_marginBottom="10dp"
              />
            

            <com.jarvis.MyView.MyGridView
                android:id="@+id/my_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0dp"
                android:numColumns="5"
                android:verticalSpacing="0dp" >
            </com.jarvis.MyView.MyGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bg_Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="特色菜"
                    android:textColor="@color/tv_Black"
                    android:textSize="20sp" />
                <include layout="@layout/zhongjian_layout"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bg_Gray" />
                <include layout="@layout/zhongjian_layout"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bg_Gray" />
                <include layout="@layout/zhongjian_layout"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/bg_Gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:scaleType="fitXY"
                        android:src="@drawable/cafe4" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_Gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:scaleType="fitXY"
                            android:src="@drawable/cafe3" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_Gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/cafe1" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/bg_Gray" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/cafe6" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bg_Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="畅销菜"
                    android:textColor="@color/tv_Black"
                    android:textSize="20sp" />

                <com.jarvis.MyView.MyGridView
                    android:id="@+id/my_gridview_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="5dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp" >
                </com.jarvis.MyView.MyGridView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
     </LinearLayout>
        </LinearLayout>
    </com.My.SlidingMenu>
</LinearLayout>