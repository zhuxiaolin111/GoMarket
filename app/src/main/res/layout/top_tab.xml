<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:id="@+id/topLayout"
                    android:background="@drawable/top_tab_bg"
                    android:layout_height="44dp"
                    android:layout_width="fill_parent">


        <ImageView android:id="@+id/openButton"
                android:gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/btn_title_navigation_pressed"
                android:background="@drawable/top_bar_left_button_bg"
                android:layout_centerVertical="true"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                />


           <TextView android:id="@+id/titleText"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:textColor="#ffffff"/>

        <ImageView android:id="@+id/editButton"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/btn_search_group"
                android:gravity="center"
                android:background="@drawable/top_bar_right_button_bg"
                android:contentDescription="@string/app_name"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>


