<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"

    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="#89ad78"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_goback_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号  13000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_go_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="首页"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="98dp"
            android:paddingRight="5dp"
            android:text="登录密码"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="25dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="5dp"
            android:text="我的位置" />

        <TextView
            android:id="@+id/tv_value_sheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_help_category_tv_bg"
            android:drawableRight="@drawable/icon_down"
            android:text="请选择"
            android:textColor="@color/content_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省" />

        <TextView
            android:id="@+id/tv_value_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_help_category_tv_bg"
            android:drawableRight="@drawable/icon_down"
            android:text="请选择"
            android:textColor="@color/content_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市" />

        <TextView
            android:id="@+id/tv_value_qu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_help_category_tv_bg"
            android:drawableRight="@drawable/icon_down"
            android:text="请选择"
            android:textColor="@color/content_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="161dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"

            android:hint="请输入详细地址"
            android:paddingLeft="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="128dp"
            android:paddingRight="5dp"
            android:text="距我" />

        <TextView
            android:id="@+id/tv_value_juli"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_help_category_tv_bg"
            android:drawableRight="@drawable/icon_down"
            android:text="请选择"
            android:textColor="@color/content_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="98dp"
            android:paddingRight="5dp"
            android:text="支付密码" />

        <EditText
            android:layout_width="112dp"
            android:layout_height="25dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:weightSum="1">

        <Button
            android:layout_width="107dp"
            android:layout_height="35dp"
            android:layout_weight="0.04"
            android:background="@drawable/shape_button"
            android:text="申请" />
    </LinearLayout>
</LinearLayout>